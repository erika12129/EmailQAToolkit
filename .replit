modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["chromium", "geckodriver", "gitFull", "jq", "libxcrypt", "playwright-driver"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Email QA System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Email QA Direct"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Direct Web Server"

[[workflows.workflow]]
name = "Email QA System"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_servers.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Email QA Direct"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Direct Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5002
externalPort = 3003

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 9999
externalPort = 3002
